{
  "name": "ammobin-classifier",
  "version": "0.1.2",
  "description": "",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "test:lint": "tslint --project ./tsconfig.json './src/**/*.ts' ",
    "test:unit": "jest --env=node",
    "test": "npm run test:lint && npm run test:unit",
    "build": "tsc",
    "prepublish": "npm run build",
    "format": "pretty-quick"
  },
  "author": "nexus-uw",
  "license": "MIT",
  "dependencies": {
    "simplengrams": "^2.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/natural": "^0.6.3",
    "husky": "^4.2.5",
    "jest": "^25.5.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^25.4.0",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node"
  }
}
