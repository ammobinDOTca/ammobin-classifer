{
  "name": "ammobin-classifier",
  "version": "0.1.1",
  "description": "",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "test:lint": "tslint --project ./tsconfig.json './src/**/*.ts' ",
    "test:unit": "jest --env=node",
    "test": "npm run test:lint && npm run test:unit",
    "build": "tsc",
    "prepublish": "npm run build",
    "format": "pretty-quick"
  },
  "author": "nexus-uw",
  "license": "MIT",
  "dependencies": {
    "natural": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "@types/natural": "^0.6.1",
    "husky": "^4.0.2",
    "jest": "^24.9.0",

    "prettier": "^2.0.0",
    "pretty-quick": "^2.0.1",

    "ts-jest": "^25.1.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"

  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node"
  }
}
